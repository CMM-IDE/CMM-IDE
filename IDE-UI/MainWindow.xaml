<Window x:Class="IDE_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE_UI"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="CMM-IDE" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center">编辑器测试</TextBlock>
            <Button x:Name="loadSample" Click="loadSample_Click" Margin="20 5 0 5" Padding="10 0 10 0">加载测试代码</Button>
            <Button x:Name="run" Click="run_Click" Margin="20 5 0 5" Padding="10 0 10 0">运行</Button>
        </StackPanel>

        <Rectangle Height="1" VerticalAlignment="Bottom" Fill="Black"/>
        <avalonEdit:TextEditor Grid.Row="1"
            ShowLineNumbers="True"
            Name="textEditor"
            FontFamily="Consolas"
            SyntaxHighlighting="C#"
            FontSize="14pt"/>

        <TextBox Name="textBox" Grid.Row="2"/>
    </Grid>
</Window>
